<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Splash screen theme -->
    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/launch_background</item>
        <!-- Set the splash screen icon -->
        <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/test</item> -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <!-- Set the animation duration -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Prevent the window from being cleared when the activity is recreated -->
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <!-- Normal theme -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
